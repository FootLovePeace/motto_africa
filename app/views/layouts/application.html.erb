  </head>

  <body>
    <header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav-left">
            <%= link_to image_tag("Motto Africa-logo.png", class: :logo), root_path%>
          </div> 
          <%# <% if user_signed_in? %> 
            <div class="nav-right"> 
              <%# <%= link_to current_user.nickname, "#", class: "nav-nickname"%> 
              <%= link_to "ログアウト", "#", class: "nav-logout"%>
              <%= link_to "新規投稿", "#", class: "nav-btn"%>
            <%# </div>     %>
          <%# <% else %> 
            <div class="nav-right">
              <%= link_to "ログイン", "#", class: "nav-btn"%>
              <%= link_to "新規登録", "#", class: "nav-btn"%>
            </div>
          <%# <% end %>   
        </div>
      </div>
    </header>        
    <%= yield %>
    <footer class="footer">
      <p class="copyright">©️ 2020 Motto AFrica</p>
    </footer>  
  </body>
</html>
